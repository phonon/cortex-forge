		libcrtx_ai_set_race(libcrtx_race_terran);
		libcrtx_write_text(PlayerGroupAll(), StringToText("Smart Hostile computer has been set to " + race + " by ") + libcrtx_colored_player_name(EventPlayer()) + StringToText("."));
