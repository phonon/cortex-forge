		soundtrack = StringWord(libcrtx_chat_get_parse_line(EventPlayer()), 2);
	}
	else {
		libcrtx_write(PlayerGroupSingle(EventPlayer()), "Current soundtrack: " + libcrtx_soundtrack_music_current + " | Current ambience: " + libcrtx_soundtrack_ambience_current);
		libcrtx_write(PlayerGroupSingle(EventPlayer()), "Syntax is !soundtrack [name] [\"ambience\" or \"music\" (default)] or !soundtrack stop [\"ambience\" or \"music\" (default)]");
		return true;
	}
	
	if(StringEqual(soundtrack, "reset", c_stringNoCase) || StringEqual(soundtrack, "stop", c_stringNoCase)) {
		if(StringEqual(StringWord(libcrtx_chat_get_parse_line(EventPlayer()), 3), "ambience", c_stringNoCase)) {
			SoundtrackStop(PlayerGroupAll(), c_soundtrackCategoryAmbience, true);
			libcrtx_soundtrack_ambience_current = "none";
			libcrtx_write(PlayerGroupSingle(EventPlayer()), "Ambience soundtrack stopped");
		}
		else {
			SoundtrackStop(PlayerGroupAll(), c_soundtrackCategoryMusic, true);
			libcrtx_soundtrack_music_current = "none";
			libcrtx_write(PlayerGroupSingle(EventPlayer()), "Music soundtrack stopped");
		}
		return true;
	}

	soundtrack = libcrtx_param_catalog(c_gameCatalogSoundtrack, soundtrack);
	if(soundtrack == null) {
		libcrtx_write(PlayerGroupSingle(EventPlayer()), "<c val=\"ff0000\">Unable to play soundtrack</c>: No such soundtrack exists.");
		return true;
	}

	if(StringEqual(StringWord(libcrtx_chat_get_parse_line(EventPlayer()), 3), "ambience", c_stringNoCase)) {
		SoundtrackStop(PlayerGroupAll(), c_soundtrackCategoryAmbience, true);
		SoundtrackPlay(PlayerGroupAll(), c_soundtrackCategoryAmbience, soundtrack, c_soundtrackCueAny, c_soundtrackIndexAny, true);
		libcrtx_soundtrack_ambience_current = soundtrack;
		libcrtx_write(PlayerGroupSingle(EventPlayer()), "Playing soundtrack: " + soundtrack);
	}
	else {
		SoundtrackStop(PlayerGroupAll(), c_soundtrackCategoryMusic, true);
		SoundtrackPlay(PlayerGroupAll(), c_soundtrackCategoryMusic, soundtrack, c_soundtrackCueAny, c_soundtrackIndexAny, true);
		libcrtx_soundtrack_music_current = soundtrack;
		libcrtx_write(PlayerGroupSingle(EventPlayer()), "Playing soundtrack: " + soundtrack);	
	}

	return true;
}
