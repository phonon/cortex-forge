bool libcrtx_command_tooltip(bool testConds, bool runActions)
{
	unitgroup g = libcrtx_chat_get_context(EventPlayer());
	string description;
	bool subtip = false;
	
	if(StringWord( libcrtx_chat_get_parse_line(EventPlayer()), 2) == "") {
		return true;
	}

	if(StringEqual(StringWord( libcrtx_chat_get_parse_line(EventPlayer()), 2),"sub",c_stringNoCase)) {
		description = StringSub( libcrtx_chat_get_parse_line(EventPlayer()), StringLength(StringWord( libcrtx_chat_get_parse_line(EventPlayer()), 1)) + 2, StringLength(libcrtx_chat_get_parse_line(EventPlayer())));
		description = StringSub( description, StringLength(StringWord( description, 1)) + 2, StringLength(description));

		subtip = true;
	}
	else {
		description = StringSub( libcrtx_chat_get_parse_line(EventPlayer()), StringLength(StringWord( libcrtx_chat_get_parse_line(EventPlayer()), 1)) + 2, StringLength(libcrtx_chat_get_parse_line(EventPlayer())));
	}

	UnitGroupLoopBegin(g);
	while(!UnitGroupLoopDone())
	{
		if(subtip) {
			UnitSetInfoSubTip(UnitGroupLoopCurrent(), StringToText(description));
		}
		else {
			UnitSetInfoTip(UnitGroupLoopCurrent(), StringToText(description));
		}
		libcrtx_unitCache_update(UnitGroupLoopCurrent(), "@tooltip", libcrtx_chat_get_parse_line(EventPlayer()));
		UnitGroupLoopStep();
	}
	UnitGroupLoopEnd();		
	
	return true;
}